<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ("./partials/head.ejs") %>
</head>
<body>
    <header>
        <nav>
            <%- include ("./partials/nav.ejs") %>
        </nav>
        <br>
        <p>Welcome to</p>
        <h1>THE STORE</h1>
        <p>user</p>
    </header>
    <section id='store-container'>
        <ul id='product-list'>
            <% products.forEach( (p, i) => { %>
                <section class="card">
                    <a href="/<%=p.id %>">
                    <img alt="<%=p.name %>" src="<%=p.img %>" height="100px">
                    <p><%=p.name %></p>
                    </a>
                    <div class='button-group'>
                        <form action="/<%=p.id %>/edit">
                            <button type="submit">Edit</button>
                        </form>
                        <form action="/<%=p.id %>/?_method=DELETE" method=POST>
                            <button type="submit">Delete</button>
                        </form>
                    </div>
                </section>
            <% }) %>
        </ul>
    </section>
</body>
</html>