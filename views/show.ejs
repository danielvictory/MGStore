<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ("./partials/head.ejs") %>
</head>
<body>
    <nav>
        <%- include ("./partials/nav.ejs") %>
    </nav>
    <header></header>
    <section id='show-container'>

        <h1><%=product.name %></h1>
        <img alt="<%=product.name %>" src="<%=product.img %>" height="100px">
        <p><%=product.description %></p>
        <p>$<%=product.price %></p>

        <% if (product.qty > 0) { %>
            <p>In Stock: <%=product.qty %></p>
            <form action="/<%=product.id %>/buy?_method=PUT" method="POST">
                <input type="submit" value="Buy!">
            </form>
        <%} else { %>
            <p> Out of Stock! </p>
            <% }%>

        <form action="/<%=product.id %>/edit">
            <button type="submit">Edit</button>
        </form>
        <form action="/<%=product.id %>/?_method=DELETE" method=POST>
            <button type="submit">Delete</button>
        </form>
    </section>
</body>
</html>